<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="CityTextBox" HorizontalAlignment="Left" Margin="53,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="GetWeatherButton" Content="Узнать погоду" HorizontalAlignment="Left" Margin="200,47,0,0" VerticalAlignment="Top" Width="100" Click="GetWeatherButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" Margin="53,92,0,0" TextWrapping="Wrap" Text="Информация о погоде отсутствует" VerticalAlignment="Top"/>

    </Grid>
</Window>
